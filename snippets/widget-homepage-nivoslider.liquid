{% if settings.slider_toggle %}
	<div class="slider_wrap">
		<div class="nivoSlider">
			{% for i in (1..5) %}
				{% capture slide_toggle %}slide{{ i }}_toggle{% endcapture %}
				{% capture slide_link %}slide{{ i }}_link{% endcapture %}
				{% capture slide_image %}slide{{ i }}_image.png{% endcapture %}

				{% if settings[slide_toggle] and settings[slide_toggle] != '' %}
					{% if settings[slide_link] and settings[slide_link] != '' %}<a href="{{ settings[slide_link] }}">{% endif %}
						<img src="{{ slide_image | asset_url }}" alt="" title="#htmlcaption-{{ i }}" />
					{% if settings[slide_link] and settings[slide_link] != '' %}</a>{% endif %}
				{% endif %}
			{% endfor %}
		</div>
	</div>

	{% if settings.slider_captions_toggle %}
	<div class="caption_hidden">
		{% for i in (1..5) %}
			{% capture slide_link %}slide{{ i }}_link{% endcapture %}
			{% capture caption1 %}slide{{ i }}_caption1{% endcapture %}
			{% capture caption2 %}slide{{ i }}_caption2{% endcapture %}
			{% capture caption3 %}slide{{ i }}_caption3{% endcapture %}
			{% capture caption4 %}slide{{ i }}_caption4{% endcapture %}
			{% capture caption5 %}slide{{ i }}_caption5{% endcapture %}

			<div id="htmlcaption-{{ i }}">
				{% if settings[slide_link] and settings[slide_link] != '' %}<a href="{{ settings[slide_link] }}">{% endif %}
					<div class="slider_cnt">
					{% if settings[caption1] and settings[caption1] != '' %}<h2>{{ settings[caption1] }}</h2>{% endif %}
					{% if settings[caption2] and settings[caption2] != '' %}<h3>{{ settings[caption2] }}</h3>{% endif %}
					{% if settings[caption3] and settings[caption3] != '' %}<h4>{{ settings[caption3] }}</h4>{% endif %}
					{% if settings[caption4] and settings[caption4] != '' %}<h5>{{ settings[caption4] }}</h5>{% endif %}
					{% if settings[caption5] and settings[caption5] != '' %}<div class="slider_btn"><span class="btn">{{ settings[caption5] }}</span></div>{% endif %}
					</div>
				{% if settings[slide_link] and settings[slide_link] != '' %}</a>{% endif %}
			</div>
		{% endfor %}
	</div>
	{% endif %}
	{% endif %}